
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<table class="table">
    <tr>
        <th scope="col">Name</th>
    </tr>
    @if (Model.Count == 0)
        {
    <p>No Customers!</p>
        }



    @foreach (var customers in Model)
        {
    <tr>
        <td>
            @Html.ActionLink((string) @customers.Name, "CustomerDetails","Customer", new { id = @customers.Id } , null)
        </td>
    </tr>
        }


</table>
